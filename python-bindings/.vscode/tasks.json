{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-python-bindings",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "cd ${workspaceFolder}/../../build/python-bindings && cmake ${workspaceFolder} && make"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "test-python-bindings",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "cd ${workspaceFolder} && python python/test_bindings.py"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ]
}