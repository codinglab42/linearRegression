{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-cpp-core",
            "type": "shell",
            "command": "cd ${workspaceFolder}/../../build/cpp-core && cmake ${workspaceFolder} && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "test-cpp-core",
            "type": "shell",
            "command": "cd ${workspaceFolder}/../../build/cpp-core && ./test_algorithms",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ]
}